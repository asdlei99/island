cmake_minimum_required(VERSION 3.7.2)

project(imgui-download NONE)

include(ExternalProject)

ExternalProject_Add(imgui
    GIT_REPOSITORY https://github.com/ocornut/imgui
    GIT_TAG master
    GIT_PROGRESS TRUE
    SOURCE_DIR "${PROJECT_SOURCE_DIR}/libs/cmake/imgui/src"
    BINARY_DIR "${PROJECT_SOURCE_DIR}/libs/cmake/imgui/build"
    INSTALL_DIR "${PROJECT_SOURCE_DIR}/libs/imgui"
    CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=${PROJECT_SOURCE_DIR}/libs/imgui"
    TEST_COMMAND ""
)
