cmake_minimum_required(VERSION 3.0.0)

project(glm-download NONE)

include(ExternalProject)

ExternalProject_Add(glm
    GIT_REPOSITORY https://github.com/g-truc/glm
    GIT_TAG master
    GIT_PROGRESS TRUE
    SOURCE_DIR "${PROJECT_SOURCE_DIR}/libs/glm"
    BINARY_DIR "${PROJECT_SOURCE_DIR}/libs/glm/build"
    CMAKE_ARGS -GLM_TEST_ENABLE_CXX_17=TRUE
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
